---
import Layout from '../layouts/Layout.astro';
import { MainContent, MainPage } from "../components/MainContent"
import GlassSurface from '../components/GlassSurface';
import LetterGlitch from '../components/Templates/LetterGlitch';
import "../assets/index.css"
const CValue = "2024-2026 Â© Finite Research Group";
// replace main body with contact form and info

const optimised = import.meta.env.PROD;
---

<style>
    a {
        text-decoration: none;
        color: inherit;
    }

</style>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finite Research Group - R&D Division</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@300;400;600;700&display=swap">
</head>

<body style="margin:0; padding:0; min-height:100vh; position:relative; overflow-x:hidden;">
    
    <div class="bg-glitch-container">
        <LetterGlitch className="bg-glitch-effect" client:load />
    </div>
    
    {!optimised && (
        <GlassSurface client:only="react" className="bg-glass-panel glass-surface--center" borderRadius={0} height={1520} width={1200} blur={0} opacity={0.15}>
            <MainPage client:only="react" CValue={CValue} />    
        </GlassSurface>
    )}
    
    {optimised && (
        <MainPage client:only="react" CValue={CValue} />
    )}
</body>
</html>