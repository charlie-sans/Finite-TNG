---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { MainContent } from "../components/MainContent"

import LetterGlitch from '../components/Templates/LetterGlitch';
import "../assets/index.css"

// replace main body with contact form and info


---

<style>
    a {
        text-decoration: none;
        color: inherit;
    }
</style>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finite Research Group - R&D Division</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@300;400;600;700&display=swap">
</head>

<body style="margin:0; padding:0; min-height:100vh; position:relative; overflow-x:hidden;">
    <div class="bg-glitch-container">
        <LetterGlitch className="bg-glitch-effect" client:load />
    </div>
    <div class="bg-content">
        <div class="container" style="position:relative; z-index:1;">
            <header>
                <div class="header-content">
                    <div class="logo">
                        <div>
                            <div class="logo-text">F<span class="logo-accent">INITE</span></div>
                            <div class="tagline">Advanced Research & Development Group</div>
                        </div>
                    </div>
                    <div class="glass-panel">
                        <div style="font-size: 0.9rem; color: #333;">Est. 2005</div>
                        <div style="font-weight: bold; color: #A902DB;">Innovating Tomorrow</div>
                    </div>
                </div>
                <nav>
                    <ul class="nav-menu">
                        <li class="nav-item active"><a href="/">Home</a></li>
                        <a href="/research"><li class="nav-item"> Research</li></a>
                        <a href="/Docs"><li class="nav-item">Publications</li></a>
                        <a href="/team"><li class="nav-item">Team <span class="badge">New</span></li></a>
                        <li class="nav-item"> <a href="/partners">Partners</a></li>
                        <li class="nav-item"> <a id="contact" href="#contact">Contact</a></li>
                    </ul>
                </nav>
            </header>
            <MainContent client:only="react"></MainContent>
            <footer>
                <div class="footer-links">
                    <a href="/privacy">Privacy Statement</a>
                    <a href="/tos">Terms of Use</a>
                    <a id="contact" href="#contact">Contact</a>
                </div>
                <p>Â© 2005-2023 Finite Research Group. All rights reserved.</p>
                <p style="font-size: 0.9rem; color: #888; margin-top: 10px;">Microsoft Windows Vista and Office 2007 inspired design theme</p>
            </footer>
        </div>
    </div>
</body>
</html>